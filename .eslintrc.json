{
	"root": true,
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:@typescript-eslint/recommended-type-checked"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": true
	},
	"rules": {
		"operator-linebreak": [
			"error",
			"after",
			{
				"overrides": {
					"?": "before",
					":": "before",
					"&&": "before",
					"||": "before"
				}
			}
		]
	}
}
